/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usertext{
  margin-top: 300rpx;
  
}

.userbtn {
  margin-top: 100rpx;
}
.userbtn button{
  background: #ccc;
  color: #fff;
  width: 120px;
  display: inline-block;
}
.userbtn button:first-child{
  background: #7bbfea;
  margin-right: 30rpx;
}